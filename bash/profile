
[[ -r ~/.bashrc.local ]] && source ~/.bashrc.local
[[ -r ~/.bashrc ]] && source ~/.bashrc
[[ -r ~/.bashrc.override ]] && source ~/.bashrc.override

if [[ "$AUTO_TMUX" -eq "1" ]]; then
  tmux has-session 2> /dev/null
  if [ "$?" -eq 1 ]
  then
    echo "Starting tmux session"
    tmux new-session -d
    tmux rename-window 'home'
  fi
  tmux attach-session
fi

