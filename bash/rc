
[[ -r ~/.bash_env ]] && source ~/.bash_env
[[ -r ~/.bash_aliases ]] && source ~/.bash_aliases
[[ -r ~/.bash_gitcompletion ]] && source ~/.bash_gitcompletion

[[ -r ~/.bashlocal_env ]] && source ~/.bashlocal_env
[[ -r ~/.bashlocal_aliases ]] && source ~/.bashlocal_aliases
[[ -r ~/.bashlocal_rc ]] && source ~/.bashlocal_rc

set -o noclobber       # can't > to existing files
set -o ignoreeof       # ignore ^D to exit shell
set -o notify          # report change in jobs' status
set -o vi              # vi commands

# ^p check for partial match in history
bind -m vi-insert "\C-p":dynamic-complete-history
# ^n cycle through the list of partial matches
bind -m vi-insert "\C-n":menu-complete

shopt -s cdspell
shopt -s checkhash
shopt -s checkwinsize
shopt -s histappend
shopt -s no_empty_cmd_completion

PS1="\[\033]0;${TITLE} \a\]${PROMPT}" 

# use xrs (resize) to reset your window size after
# you have resized an xterm (is this needed?)
alias xrs='set -o noglob; eval `resize`; set +o noglob'

# vi: set tabstop=4 shiftwidth=4 textwidth=79 filetype=sh expandtab:
