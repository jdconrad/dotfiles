[include]
    path = .gitconfig.local

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
	autocrlf = input

[alias]
    co = checkout
    ci = commit
    b = branch
    s = status
    cp = cherry-pick

    # scripts
    pr = "!f() { git fetch origin pull/$1/head:review/$1; }; f"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    prune = "!f() { echo \"The following remote branches are fully merged into master and will be removed:\" && git branch --merged master | grep -v \"master$\" | xargs -L 1 git branch -D; }; f"
    sync-remotes = "!f() { git co master ; git fetch ; git remote prune origin; }; f"

    grog = "log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\""

[push]
	default = simple
