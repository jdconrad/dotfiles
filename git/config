[include]
    path = .gitconfig.local

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore

[alias]
    co = checkout
    ci = commit
    b = branch
    s = status
    cp = cherry-pick

    # scripts
    pr = "!f() { git fetch origin pull/$1/head:review/$1; }; f"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    sync-remotes = "!f() { git co master ; git fetch ; git remote prune origin; }; f"
    prune-local-merged = "!f() { git branch —merged master | grep -v \"master$\"| xargs git branch -d; }; f"
    #prune-remote-merged = "!f() { echo \"The following remote branches are fully merged into master and will be removed:\"; git branch -r —merged master | sed 's/ *origin\///' | grep -v \"master$\"; read -p \"Continue (y/n)? \" if [ \"$REPLY\" == \"y\" ] then git branch -r —merged master | sed 's/ *origin\///' | grep -v \"master$\" | xargs -I%; git push origin --delete %; echo \"Done!\" say \"Obsolete branches are removed\" fi; }; f"
    #prune-merged = 

[push]
	default = simple
